{
  "manifest_version": 3,

  "name": "Elm example",
  "description": "Chrome Extension Sample",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "./dist/index.html"
  },
  "permissions": [
    "bookmarks",
    "tabs",
    "activeTab"
  ],

  "host_permissions": ["<all_urls>"]
}
